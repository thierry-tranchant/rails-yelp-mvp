<h2>Add a new restaurant</h2>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :category %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.submit %>
<% end %>

<div class="down-links">
  <%= link_to 'Back to restaurants list', restaurants_path %>
</div>
